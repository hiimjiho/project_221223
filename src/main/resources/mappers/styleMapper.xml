<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="com.PersonalProject.style.dao.StyleMapper">
 
 	<select id="selectStyleByProductId" parameterType="map" resultType="com.PersonalProject.style.model.Style">
 		SELECT
 			`id`
			, `productId`
			, `userId`
			, `shoesImagePath`
			, `content`
			, `createdAt`
			, `updatedAt`
		FROM
			`style`
		WHERE
			`productId` = #{productId}
		ORDER BY `id` DESC
		LIMIT #{pageStart}, #{pageLimit}
 	</select>
 	
 	<select id="countStyleByProductId" parameterType="int" resultType="int">
 		SELECT
 			COUNT(*)
 		FROM
 			`style`
 		WHERE
 			`productId` = #{productId}
 	</select>
 	
 	<select id="selectStyleByProductIdLimit4" parameterType="int" resultType="com.PersonalProject.style.model.Style">
 		SELECT
 			`id`
			, `productId`
			, `userId`
			, `shoesImagePath`
			, `content`
			, `createdAt`
			, `updatedAt`
		FROM
			`style`
		WHERE
			`productId` = #{productId}
		ORDER BY `id` DESC
		LIMIT 4
 	</select>
 	
 	<insert id="insertStyle" parameterType="map">
 		INSERT INTO `style`
 		(
 			`productId`
 			, `userId`
 			, `shoesImagePath`
 			, `content`
 			, `createdAt`
 			, `updatedAt`
 		)
 		VALUES
 		(
 			#{productId}	
 			, #{userId}
 			, #{shoesImagePath}
 			, #{content}
 			, NOW()
 			, NOW()
 		)
 	</insert>
 	
 	<select id="selectStyleList" resultType="com.PersonalProject.style.model.Style">
 		SELECT
 			`id`
			, `productId`
			, `userId`
			, `shoesImagePath`
			, `content`
			, `createdAt`
			, `updatedAt`
		FROM
			`style`
		ORDER BY `id` DESC
 	</select>
 	
 	<delete id="deleteStyleByStyleId" parameterType="int">
 		DELETE FROM
 			`style`
 		WHERE
 			`id` = #{styleId}
 	</delete>
 	
 	<select id="selectStyleByidUserId" resultType="com.PersonalProject.style.model.Style" parameterType="int">
 		SELECT
 			`id`
			, `productId`
			, `userId`
			, `shoesImagePath`
			, `content`
			, `createdAt`
			, `updatedAt`
		FROM
			 `style`
		WHERE
			`id` = #{styleId}
		AND
			`userId` = #{userId}
 	</select>
 	
 	<delete id="deleteStyleByUserIdStyleId" parameterType="map">
 		DELETE FROM `style`
 		WHERE
 			`id` = #{styleId}
 		AND
 			`userId` = #{userId}
 	</delete>
 	
 	<select id="selectStyleListByUserId" parameterType="int" resultType="com.PersonalProject.style.model.Style">
 		SELECT
 			`id`
			, `productId`
			, `userId`
			, `shoesImagePath`
			, `content`
			, `createdAt`
			, `updatedAt`
		FROM
			 `style`
		WHERE
			`userId` = #{userId}
		ORDER BY `id` DESC
 	</select>
 	
 	<select id="selectStyleByStyleId" parameterType="int" resultType="com.PersonalProject.style.model.Style">
 		SELECT
 			`id`
			, `productId`
			, `userId`
			, `shoesImagePath`
			, `content`
			, `createdAt`
			, `updatedAt`
		FROM
			 `style`
		WHERE
			`id` = #{styleId}
 	</select>
 	
 	<select id="selectStyle" parameterType="map" resultType="com.PersonalProject.style.model.Style">
 		SELECT
 			`id`
			, `productId`
			, `userId`
			, `shoesImagePath`
			, `content`
			, `createdAt`
			, `updatedAt`
		FROM
			 `style`
		ORDER BY `id` DESC
		LIMIT #{pageStart}, #{pageLimit}
 	</select>
 	
 	<select id="countStyle" resultType="int">
 		SELECT
 			COUNT(*)
 		FROM
 			`style`
 	</select>
 </mapper>