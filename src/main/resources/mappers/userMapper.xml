<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="com.PersonalProject.user.dao.UserMapper">
 	<select id="selectUserByLoginId" resultType="com.PersonalProject.user.model.User" parameterType="String">
 		SELECT
 			`id`
			, `loginId`
			, `password`
			, `nickname`
			, `email`
			, `profileImagePath`
			, `createdAt`
			, `updatedAt`
		FROM
			`user`
		WHERE	
			`loginId` = #{loginId}
 	</select>
 	
 	<select id="selectUserByNickname" resultType="com.PersonalProject.user.model.User" parameterType="String">
 		SELECT
 			`id`
			, `loginId`
			, `password`
			, `nickname`
			, `email`
			, `profileImagePath`
			, `createdAt`
			, `updatedAt`
		FROM
			`user`
		WHERE	
			`nickname` = #{nickname}
 	
 	</select>
 	<insert id="insertMembership" parameterType="map">
 		INSERT INTO `user`
 		(
 			
			`loginId`
			, `password`
			, `nickname`
			, `email`
			, `createdAt`
			, `updatedAt`
 		)
 		VALUES
 		(
 			#{loginId}
 			, #{password}
 			, #{nickname}
 			, #{email}
 			, NOW()
 			, NOW()
 		)
 	
 	</insert>
 	<select id="selectUserByLoginIdPassword" parameterType="map" resultType="com.PersonalProject.user.model.User">
 		SELECT
 			`id`
			, `loginId`
			, `password`
			, `nickname`
			, `email`
			, `profileImagePath`
			, `createdAt`
			, `updatedAt`
		FROM
			`user`
		WHERE
			`loginId` = #{loginId}
		AND
			`password` = #{password}
 	</select>
 	
 	<select id="selectUserById" resultType="com.PersonalProject.user.model.User">
 		SELECT
 			`id`
			, `loginId`
			, `password`
			, `nickname`
			, `email`
			, `profileImagePath`
			, `createdAt`
			, `updatedAt`
		FROM
			`user`
		WHERE
			`id` = #{id}
 	</select>
 	
 	<select id="selectUserByIntegerId" parameterType="Integer" resultType="com.PersonalProject.user.model.User">
 		SELECT
 			`id`
			, `loginId`
			, `password`
			, `nickname`
			, `email`
			, `profileImagePath`
			, `createdAt`
			, `updatedAt`
		FROM
			`user`
		WHERE
			`id` = #{userId}
 	</select>
 	
 	<update id="updateUser" parameterType="map">
 		UPDATE
 			`user`
 		SET
 			`nickname` = #{nickname}
 			<if test="profileImagePath != null">
 			, `profileImagePath` = #{profileImagePath}
 			</if>
 		WHERE
 			`id` = #{userId}
 	</update>
 	
 	<select id="selectUserList" resultType="com.PersonalProject.user.model.User">
 		SELECT
 			`id`
			, `loginId`
			, `password`
			, `nickname`
			, `email`
			, `profileImagePath`
			, `createdAt`
			, `updatedAt`
		FROM
			`user`
 	</select>
 	
 	<delete id="deleteUserByUserId" parameterType="int">
 		DELETE FROM
 			`user`
 		WHERE
 			`id` = #{userId}
 	</delete>
 	
 	<select id="selectUserByUserId" parameterType="int" resultType="com.PersonalProject.user.model.User">
 		SELECT
 			`id`
			, `loginId`
			, `password`
			, `nickname`
			, `email`
			, `profileImagePath`
			, `createdAt`
			, `updatedAt`
		FROM
			`user`
		WHERE
			`id` = #{userId}
 	</select>
 </mapper>